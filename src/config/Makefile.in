for x in base/*.sh
do
	mf_script $x
done

for x in tools/*.c
do
	mf_simple $x
done

mf_simple ccmkmf/ppfilter.c
mf_script ccmkmf/ccmkmf.sh
mf_link	"\$(BIN)/mkmf" "\$(BIN)/ccmkmf"

mf_script d2m/dir2make.sh

mf_dir PPINC "\$(TOP)/ppinclude"

for x in ppcfg/*.pph
do
	mf_hdr PPINC $x
done

for x in ppinclude/*.cfg ppinclude/*.pph
do
	mf_file PPINC $x
done

mf_dir	INC	'$(TOP)/include/EFEU'

for x in header/*.h
do
	mf_hdr INC $x
done

mf_dir	ETC	'$(TOP)/etc'
