#include <d2m.cfg>

DOCDIR = _EFEU_TOP/doc

#define DE_Doc(name,desc,src)	\
SubMakeRule(Concat(de-,name),desc,src,NullArg,\
dir2make -n -D $(DOCDIR)/de -p --lang=de -d name)

#if	LANG_de
DE_Doc(make,"make und co",make)
DE_Doc(prog,"EFEU Programmierhandbuch",prog)
DE_Doc(mdmat,"Handbuch zu den Datenmatrizen",mdmat)
DE_Doc(efeudoc,"Handbuch zum Dokumentkonverter",efeudoc)
#else
DE_Doc(make,"german documentation about mkmf",make)
DE_Doc(prog,"german documentation about EFEU programming",prog)
DE_Doc(mdmat,"german documentation about data cubes",mdmat)
DE_Doc(efeudoc,"german documentation about efeudoc",efeudoc)
#endif
