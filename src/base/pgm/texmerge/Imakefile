DEP=	DEP_IORL DEP_MD DEP_MATH DEP_EFX DEP_EFM
LIB=	LIB_IORL LIB_MD LIB_MATH LIB_EFX LIB_EFM

#define	Prog(name,obj)	Program($(BINDIR),name,obj,$(DEP),$(LIB))

TM_OBJ=	texmerge.o error.o alloc.o buffer.o paste.o \
	input.o output.o putfunc.o \
	getcmd.o arglist.o cmd.o stdcmd.o block.o builtin.o \
	config.o merge.o

Destination(CFGDIR,$(EFEUTOP)/lib/texmerge)
CFLAGS=	'-DDEF_PATH="$(CFGDIR)"'

Prog(texmerge,$(TM_OBJ))
Prog(docdiff,docdiff.o)
