/*	Hilfsfunktionen zur Konstruktion von LaTeX-Anweisungen:
*/

\cmdeval {
void Merge::ltx_key ()	plain.putc('\\');
void Merge::ltx_beg ()	plain.putc('{');
void Merge::ltx_end ()	plain.putc('}');
void Merge::ltx_cmd (str s)	fprintf(plain, "\\%s", s);
void Merge::ltx_opt (str s = NULL)	fprintf(plain, "[%s]", s);
void Merge::ltx_arg (str s = NULL)	fprintf(plain, "{%s}", s);
}

