/*	Schriftmakros
*/

/**/

\newcmd\bfon{ltx_beg(); ltx_cmd("bf"); ltx_arg();}
\newcmd\iton{ltx_beg(); ltx_cmd("it"); ltx_arg();}
\newcmd\tton{ltx_beg(); ltx_cmd("tt"); ltx_arg();}

\newcmd\bfoff{ltx_end();}
\newcmd\itoff{ltx_end();}
\newcmd\ttoff{ltx_end();}
