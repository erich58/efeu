#include <SynFig.hdr>

/*	Testdaten und Achsenbezeichner
*/

mdmat md = mdread ((IO) string !
2	c1	c2	c3
l1	1.1	1.2	1.3
l2	2.1	2.2	2.3
l3	3.1	3.2	3.3
!, "type=double x=Spalten y=Zeilen");

TabLabel col = TabLabel("col", "Spalten", string !
c1	Spalte 1
c2	Spalte 2
c3	3: Spalte 3
!);

TabLabel line = TabLabel("line", "Zeilen", string !
l1	Zeile 1
l2	Zeile 2
l3	Zeile 3
!);

/*	Tabelle
*/

SynFig fig = SynFig(cout);
fig.caption("Testtabelle", "Untertitel");
fig.tab(col);
fig.body(line, md);
fig.end();
fig.note("\\fn{1} Anmerkung 1");
free(fig);
