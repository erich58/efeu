\Name
SynFig -- Werkzeuge zur Generierung von Übersichten
\Synopsis
\tthang
\#include \<SynFig.hdr\>

SynFig SynFig (IO <io>, int <margin> = 6, bool <npage> = true)

void SynFig::caption (str <hname>, str <sname>)

void SynFig::printf (str <fmt>, ...)

void SynFig::puts (str <text>)

virtual void SynFig::note (str <name>, int <width> = 3)

void SynFig::tab (TabLabel <col>, int <width> = 2, int <height> = 2)

void SynFig::body (TabLabel <line>, mdmat <md>, VirFunc <idx> = NULL, int <lag> = 0)

void SynFig::tabline (str <label>, ...)

//void SynFig::picture (int <height> = 14, int <xpos> = 0, int <ypos> = 0)

