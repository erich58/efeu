%	\@tempdima wird intern verwendet

\newcount\Sr@Count

\def\Sr@Box#1{\vbox to \z@ {%
	\vskip -0.5\fboxrule
	\vskip -\Syn@vunit
	\hrule height \fboxrule
	\hbox to 2\Syn@hunit {%
		\vsize=#1\Syn@vunit
		\advance\vsize by 2\Syn@vunit
		\advance\vsize by \headsep
		\advance\vsize by 10.5mm
		\advance\vsize by \footskip
		\advance\vsize by -\fboxrule
		\vrule height \vsize
		\hss
		\vrule height \vsize
	}%
	\hrule height \fboxrule
	\vss
}}

%	Vertikale Boxen

\def\Sr@VLine#1{\hbox{%
	\Sr@Count\Syn@Spalten
	\loop
	\ifnum\Sr@Count>1
		\Sr@Box{#1}\hskip\Syn@hunit
		\advance\Sr@Count by -1
	\repeat
	\Sr@Box{#1}%
}}

\def\Sr@Line#1{\hbox {\vbox to \Syn@vunit
	{\raggedleft \hsize\@tempdima \advance\hsize by 8mm \vss #1 \hrule}}}

\def\Sr@HLine{%
	\Sr@Count=2
	\loop
	\ifnum\Sr@Count<\Syn@Zeilen
		\Sr@Line{\the\Sr@Count}%
		\advance\Sr@Count by 1
	\repeat
}

