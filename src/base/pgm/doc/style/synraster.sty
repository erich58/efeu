	\@tempdima=41\Syn@hunit
	\color{Red}{%
	\vskip-\Syn@vunit
	\Sr@VLine{\Syn@Zeilen}
	\vskip-\Syn@vunit
	\color{Cyan}{\Sr@Line{~}}%
	\color{Cyan}{\Sr@Line{Kopf}}%
	\vskip 10.5mm
	\vskip \headsep
	\vskip -2\Syn@vunit
	\color{Cyan}{\Sr@Line{0}}%
	\Sr@Line{1}%
	\color{Cyan}{\Sr@HLine}%
	\Sr@Line{\Syn@Zeilen}%
	\color{Cyan}{\Sr@Line{~}}%
	\color{Cyan}{\Sr@Line{~}}%
	\color{Cyan}{\Sr@Line{Fuß}}%
	\vss
	}%
}}\hss}}

\let\Syn@HeadHook\Sr@STER
