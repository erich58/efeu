#ifndef	_d2m_shared_pph
#define	_d2m_shared_pph	1

#include <d2m_rules.pph>

#undef	GenObject
#define	GenObject(name) \
AllTarget(Concat(name,.so)) \
CompileRule(Concat(name,.so),SourceName(name),$(INCFLG) \
-shared -nostdlib -o $@ SourceName(name)) \
DependRule(Concat(name,.so),SourceName(name),$(INCFLG) SourceName(name)) \
@;

#endif	/* d2m_shared.pph */
