Destination(DATA,$(EFEUTOP)/share/eletters)
Destination(IMAGES,$(DATA)/images)
Destination(AUDIO,$(DATA)/audio)

#define	EtkScript(name,src)	\
InstallCmdScript(PathName($(BINDIR),name),src,-ec etk)

#define	InstallImage(tg,src)	\
NamedTarget(files,PathName($(IMAGES),tg)) \
CleanTarget(PathName($(IMAGES),tg)) \
@;PathName($(IMAGES),tg): src \
@;@+rm -f $@ \
@;@+cp -f src $@ \
@;

#define	LinkImage(dir,tg,src) \
AllTarget(PathName(dir,tg)) \
CleanTarget(PathName(dir,tg)) \
@;PathName(dir,tg): PathName($(IMAGES),src) \
@;@+if [ ! -d dir ]; then mkdir dir; fi \
@;@+rm -f $@ \
@;@+ln -fs PathName($(IMAGES),src) $@ \
@;
