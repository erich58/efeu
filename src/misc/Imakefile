/*	Diverses
*/

#include <d2m.cfg>

TOPDIR = EFEUROOT
BINDIR = $(TOPDIR)/bin
LIBDIR = $(TOPDIR)/lib
APPDIR = $(TOPDIR)/lib/efeu
DOCDIR = $(TOPDIR)/doc

DIR2MAKE = dir2make -B $(BINDIR) -L $(LIBDIR) -A $(APPDIR) -D $(DOCDIR)

BaseInc = -H $(TOPDIR)/include/EFEU
MathInc = -H $(TOPDIR)/include/Math

SubMake(script,"Shell-Scripts",pgm/script,NullArg,NullArg)
SubMake(tools,"Einfache Hilfsprogramme",pgm/tools,NullArg,NullArg)
SubMake(latex,"Latex-Stylefiles",latex,NullArg,NullArg)
SubMake(vimrc,"vim-Konfigurationsdateien",vimrc,NullArg,NullArg)
SubMake(local,"Lokale Ergänzungen",local,NullArg,NullArg)

SubMake(pix,"Pixelfiles",lib/pix,$(BaseInc) -lpix,NullArg)

SubMake(pixmap,"Hilfsprogramme für Pixeldateien",pgm/pixmap,NullArg,pix)
