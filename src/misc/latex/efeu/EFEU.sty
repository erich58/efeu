%	Seitenstyle

\def\EFEU@chaptermark#1{\markright{\uppercase{#1}}{}}

\def\ps@plain{%
	\let\@evenhead\@empty
	\let\@oddhead\@empty
	\def\@evenfoot{\thepage\hfill}
	\def\@oddfoot{\hfill\thepage}
	\let\@mkboth\markboth
}

\def\ps@headings{%
	\def\@oddhead{Kapitel \thechapter\hfil\rightmark}%
	\def\@evenhead{\leftmark\hfil Kapitel \thechapter}%
	\def\@evenfoot{\thepage\hfill}
	\def\@oddfoot{\hfill\thepage}
	\let\@mkboth\markboth
	\let\chaptermark\EFEU@chaptermark
	\let\sectionmark\@gobble
}

\def\ps@myheadings{%
	\def\@evenhead{\thechapter\hfil\slshape\leftmark}%
	\def\@oddhead{{\slshape\rightmark}\hfil\thechapter}%
	\def\@evenfoot{\thepage\hfill}
	\def\@oddfoot{\hfill\thepage}
%	\let\@mkboth\@gobbletwo
%	\let\chaptermark\@gobble
%	\let\sectionmark\@gobble
	\let\@mkboth\markboth
}


\def\cleardoublepage{\clearpage
	\if@twoside \ifodd\c@page
	\else
		\thispagestyle{empty}
		\hbox{}\newpage
		\if@twocolumn\hbox{}\newpage\fi
	\fi\fi}

